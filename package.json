{
    "name": "sunset-sunrise",
    "version": "0.1.0",
    "description": "Access the sunrise-sunset.org API",
    "homepage": "https://github.com/dguo/sunset-sunrise-api",
    "repository": {
        "type": "git",
        "url": "https://github.com/dguo/sunset-sunrise-api.git"
    },
    "author": {
        "name": "Danny Guo",
        "email": "danny@dannyguo.com",
        "url": "https://dannyguo.com"
    },
    "license": "MIT",
    "scripts": {
        "build": "yarn run clean && tsc",
        "build:watch": "yarn run clean && tsc --watch",
        "clean": "rimraf build",
        "format": "prettier --write \"./**/*.{json,ts}\"",
        "format:check": "prettier --list-different \"./**/*.{json,ts}\"",
        "lint": "eslint \"./**/*.ts\"",
        "prepublishOnly": "yarn run format && yarn run lint && yarn run test && yarn run build",
        "start": "yarn install && yarn run test:watch",
        "test": "jest",
        "test:watch": "jest --watchAll"
    },
    "dependencies": {
        "camelcase-keys": "^6.2.2",
        "ky": "^0.24.0",
        "ky-universal": "^0.8.2"
    },
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "fetch-mock-jest": "^1.5.1",
        "jest": "^26.6.3",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.4",
        "typescript": "^4.0.5"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ]
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "./coverage/",
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "prettier": {
        "bracketSpacing": false,
        "tabWidth": 4
    }
}
